# ComfyUI Configuration Environment Variables
# Copy this file to .env and fill in your values

# Configuration Loading Options (choose one)
# ==========================================

# Option 1: Load config by name (looks for config-{name}.yaml)
CONFIG_NAME=

# Option 2: Load config from URL
COMFYUI_CONFIG_URL=

# Option 3: Load config from specific file path
COMFYUI_CONFIG_FILE=

# API Tokens (Optional)
# =====================
# HuggingFace Token - for downloading from private/gated repositories
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=

# CivitAI API Key - for faster downloads and accessing some models
# Get your API key from: https://civitai.com/user/account
CIVITAI_API_KEY=

# Runtime Settings
# ================
# Download models on startup (true/false)
DOWNLOAD_MODELS=false

# Auto-update ComfyUI on startup (true/false)
AUTO_UPDATE=false

# ComfyUI runtime arguments
# Examples: --highvram, --normalvram, --lowvram, --cpu
COMFYUI_ARGS=

# Config-specific arguments (optional)
COMFYUI_CONFIG_ARGS=

# Preview method: auto, latent2rgb, or taesd
COMFYUI_PREVIEW_METHOD=auto

# Docker Build Settings
# =====================
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# For pre-baked images (when building)
CONFIG=base
PREBAKE=false

# RunPod Deployment Settings
# ==========================
RUNPOD_POD_ID=
RUNPOD_VOLUME_ID=